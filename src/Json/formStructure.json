      "label": "Step 1",
      "fields": [
        {
          "id": "name",
          "label": "Name",
          "type": "text",
          "required": true,
          "validationRegex": "^(?!\\s*$).+",
          "validationMessage": "Name cannot be empty"
        },
        {
          "id": "email",
          "label": "Email",
          "type": "email",
          "required": true,
          "validationRegex": "^[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\.[A-Za-z]{2,4}$",
          "validationMessage": "Invalid email format"
        },
        {
          "id": "age",
          "label": "Age",
          "type": "number",
          "required": true,
